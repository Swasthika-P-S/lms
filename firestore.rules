rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null &&
        request.auth.token.email == 'swasthikaponnusamy05@gmail.com';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      
      match /progress/{topicId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
      }
      
      match /submissions/{submissionId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
      }
    }
    
    // Courses collection (read-only content)
    match /courses/{courseId} {
      allow read: if isSignedIn();
      allow write: if false;
      
      match /topics/{topicId} {
        allow read: if isSignedIn();
        allow write: if false;
        
        match /problems/{problemId} {
          allow read: if isSignedIn();
          allow write: if false;
        }
      }
    }

    // ── Quiz Courses ─────────────────────────────────────────────
    // Admin can create/update/delete; all signed-in users can read
    match /quiz_courses/{courseId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();

      match /topics/{topicId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();

        match /questions/{questionId} {
          allow read: if isSignedIn();
          allow write: if isAdmin();
        }
      }
    }
    
    // Resources collection (external links)
    match /resources/{resourceId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    
    // Leaderboard collection
    match /leaderboard/{entryId} {
      allow read: if isSignedIn();
      allow write: if false;
    }
    
    // Chat history
    match /chats/{userId} {
      allow read, write: if isOwner(userId);
      
      match /messages/{messageId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Admin collection
    match /admin/{document=**} {
      allow read, write: if false;
    }
  }
}

